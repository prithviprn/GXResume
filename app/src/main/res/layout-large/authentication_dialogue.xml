<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_authentication_title"
        style="@style/block_head_text_view_style_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/authentication" />

    <EditText
        android:id="@+id/edit_authentication_password"
        style="@style/edit_text_style_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/authentication_hint"
        android:inputType="textPassword" />

    <View
        style="@style/seperator_large"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

</LinearLayout>