<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:id="@+id/template8_reference_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:clipChildren="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="@dimen/item_image_width_large"
        android:layout_height="@dimen/item_image_hight_large"
        android:layout_marginTop="15dp"
        android:clipChildren="false" >

        <ImageView
            android:id="@+id/image_projects"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="-7.5dp"
            android:layout_marginTop="4dp"
            android:background="#ffffff"
            android:src="@drawable/ic_ring" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_refrence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <com.grexoft.resume.widgets.TextViewWithFont
            android:id="@+id/txt_full_name"
            font:name="oswald"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/referer_name_key"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            font:spacing="@dimen/spacing_head"
            font:type="bold" />

        <com.grexoft.resume.widgets.TextViewWithFont
            android:id="@+id/txt_title_designation"
            font:name="oswald"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/job_desig_key"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large"
            font:spacing="@dimen/spacing_head"
            font:type="bold" />

        <TextView
            android:id="@+id/txt_work_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/referer_work_address_key"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/txt_email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_id_key"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/txt_work_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/work_phone_key"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/txt_personal_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_phone_key"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

</LinearLayout>