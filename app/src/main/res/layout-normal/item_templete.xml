<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/il_standard"
        android:adjustViewBounds="true"/>

    

        <com.grexoft.resume.widgets.TextViewWithFont
            android:id="@+id/txt_name"
            font:name="calibri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_container"
            android:layout_centerHorizontal="true"
            android:text="@string/template_name_key"
            android:textColor="@color/green_screen"
            android:textSize="22dp"
            font:type="bold" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"            
            android:gravity="center"
            android:text="@string/price_key"
            android:textColor="@color/green_screen"
            android:textSize="22dp" />
    

</RelativeLayout>