<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/research_paper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_paper_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paper_title_key"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
        
        
        <TextView
            android:id="@+id/tv_journal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@android:color/black"
            android:text="@string/journal_key"
            android:textSize="@dimen/text_size_normal" />
        
        <TextView
            android:id="@+id/tv_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@android:color/black"
            android:text="@string/volume_key"
            android:textSize="@dimen/text_size_normal" />
        
        
        <TextView
            android:id="@+id/tv_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@android:color/black"
            android:text="@string/issue_key"
            android:textSize="@dimen/text_size_normal" />
        
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@android:color/black"
            android:text="@string/paper_description_key"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>

</LinearLayout>
