<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/form_box_bg"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:padding="0.5dp" >

        <LinearLayout
            style="@style/fieldset_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/block_head_text_view_style_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/basic_key" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_title"
                    style="@style/edit_text_style_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_Resume" />

                <View
                    style="@style/seperator_small"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />

                <EditText
                    android:id="@+id/etdob"
                    style="@style/edit_text_style_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/date_of_birth_key" />

                <View
                    style="@style/seperator_small"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />

                <EditText
                    android:id="@+id/etnationality"
                    style="@style/edit_text_style_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nationality_ley" />

                <View
                    style="@style/seperator_small"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />

                <EditText
                    android:id="@+id/etlanguage"
                    style="@style/edit_text_style_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/language_key" />

                <View
                    style="@style/seperator_small"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />

                <EditText
                    android:id="@+id/et_father_name"
                    style="@style/edit_text_style_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/father_name_key" />

                <View
                    style="@style/seperator_small"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />

                <EditText
                    android:id="@+id/et_mother_name"
                    style="@style/edit_text_style_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mother_name_key" />

                <View
                    style="@style/seperator_small"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp" />

                <Spinner
                    android:id="@+id/gendar"
                    style="@style/edit_text_style_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/gender_array" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/fieldset_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/block_head_bg"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <TextView
                    style="@style/block_head_text_view_style_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:text="@string/custom_field_key" />

                <ImageView
                    android:id="@+id/btn_addmore"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.15"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:src="@drawable/ic_plus_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/more_fields_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_password"
            style="@style/btn_password_style_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/change_password"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>