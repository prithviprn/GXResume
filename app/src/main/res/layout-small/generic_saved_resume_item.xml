<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  >

    
    <LinearLayout
        android:id="@+id/layout_resume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
         android:background="@color/block_head_bg"
        android:orientation="horizontal"
        android:weightSum="1.0" >
    <TextView
        android:id="@+id/txt_title"
        style="@style/block_head_text_view_style_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.35" />
    
    <TextView
        android:id="@+id/txt_resume_date"
        style="@style/block_head_text_view_style_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.35" />

    <ImageView
        android:id="@+id/btn_edit"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="0.15"
        android:layout_gravity="center_vertical"
        android:background="@color/block_head_bg"
        android:padding="8dp"
        android:src="@drawable/ic_edit_dark" />

    <ImageView
        android:id="@+id/btn_dlt"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:background="@color/block_head_bg"
        android:layout_weight="0.15"
        android:padding="8dp"
        android:src="@drawable/ic_delete_dark" />
    
</LinearLayout>

</LinearLayout>