<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_container"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/layout_txt"
        android:src="@drawable/il_classical" />

    <LinearLayout
        android:id="@+id/layout_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal" >

        <com.grexoft.resume.widgets.TextViewWithFont
            android:id="@+id/txt_name"
            font:name="calibri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/template_name_key"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            font:type="bold" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/temp_price_tag"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="@string/price_key"
            android:textColor="@android:color/white"
            android:textSize="14dp" />
    </LinearLayout>

</RelativeLayout>