<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_reference_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <com.grexoft.resume.widgets.TextViewWithFont
            android:id="@+id/txt_full_name"
            font:name="calibri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Full Name"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_small"
            font:type="bold" />

        <com.grexoft.resume.widgets.TextViewWithFont
            android:id="@+id/txt_title_designation"
            font:name="calibri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="Title/Designation"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/layout_reference_detail2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <com.grexoft.resume.widgets.TextViewWithFont
            android:id="@+id/txt_work_phone"
            font:name="calibri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Work Phone"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_small" />

        <com.grexoft.resume.widgets.TextViewWithFont
            android:id="@+id/txt_personal_phone"
            font:name="calibri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="Personal Phone"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_reference_detail3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical" >

        <com.grexoft.resume.widgets.TextViewWithFont
            android:id="@+id/txt_email_address"
            font:name="calibri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_small" />
        
        <com.grexoft.resume.widgets.TextViewWithFont
            android:id="@+id/txt_work_address"
            font:name="calibri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work Address"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

</LinearLayout>