<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:id="@+id/template8_reference_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    android:clipChildren="false"  >

    <LinearLayout
        android:layout_width="@dimen/item_image_width_small"
        android:layout_height="@dimen/item_image_hight_small"
        android:clipChildren="false" 
         android:layout_marginTop="7.5dp" >

        <ImageView
            android:id="@+id/image_projects"
            android:layout_width="4dp"
            android:layout_height="4dp"
             android:layout_marginLeft="-2dp"
            android:background="#ffffff"
            android:src="@drawable/ic_ring" />
    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/layout_refrence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <com.grexoft.resume.widgets.TextViewWithFont
            android:id="@+id/txt_full_name"
            font:name="oswald"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/referer_name_key"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            font:spacing="@dimen/spacing_head"
            font:type="bold" />

        <com.grexoft.resume.widgets.TextViewWithFont
            android:id="@+id/txt_title_designation"
            font:name="oswald"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/referer_job_designation_key"
            android:textSize="@dimen/text_size_small"
             android:textColor="@android:color/black"
             font:spacing="@dimen/spacing_head"
             font:type="bold" />
        
        <TextView
            android:id="@+id/txt_work_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@android:color/black"
            android:text="@string/referer_work_address_key"
            android:textSize="@dimen/text_size_small" />
        
        <TextView
            android:id="@+id/txt_email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@android:color/black"
            android:text="@string/email_id_key"
            android:textSize="@dimen/text_size_small" />
        
        <TextView
            android:id="@+id/txt_work_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@android:color/black"
            android:text="@string/work_phone_key"
            android:textSize="@dimen/text_size_small" />
        
        <TextView
            android:id="@+id/txt_personal_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@android:color/black"
            android:text="@string/personal_phone_key"
            android:textSize="@dimen/text_size_small" />
        
       
    </LinearLayout>
    

</LinearLayout>
