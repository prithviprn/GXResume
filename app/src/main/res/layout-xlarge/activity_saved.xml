<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.grexoft.resume.SavedActivity" >

    <LinearLayout
        android:id="@+id/layout_fieldset"
        style="@style/fieldset_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@android:color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_saved_resumes"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/info_head_bg"
            android:gravity="center"
            android:text="@string/saved_resume"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/resumes_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:visibility="gone" >
        </ListView>

        <TextView
            android:id="@+id/txt_no_resume"
            style="@style/block_head_text_view_style_xlarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="15dp"
            android:text="@string/no_resume"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>