<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/form_box_bg"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:padding="0.5dp" >

        <LinearLayout
            style="@style/fieldset_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/et_declartion"
                style="@style/edit_text_multiline_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="@string/declaretion_hint" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            style="@style/fieldset_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/block_head_text_view_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_from_below" />

            <TextView
                android:id="@+id/tv_declar_suggestion1"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_declaration_1" />

            <View
                style="@style/seperator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <TextView
                android:id="@+id/tv_declar_suggestion2"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_declaration_2" />

            <View
                style="@style/seperator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <TextView
                android:id="@+id/tv_declar_suggestion3"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_declaration_3" />

            <View
                style="@style/seperator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <TextView
                android:id="@+id/tv_declar_suggestion4"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_declaration_4" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>