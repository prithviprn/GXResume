<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/form_box_bg"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:padding="0.5dp" >

        <LinearLayout
            style="@style/fieldset_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/objtitle"
                style="@style/block_head_text_view_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/focus_on_key" />

            <EditText
                android:id="@+id/etcarrerobj"
                style="@style/edit_text_multiline_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="@string/objective_hint" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            style="@style/fieldset_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/block_head_text_view_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_from_below_key" />

            <TextView
                android:id="@+id/objectivesuggestion1"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_objective_1" />

            <View
                style="@style/seperator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <TextView
                android:id="@+id/objectivesuggestion2"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_objective_2" />

            <View
                style="@style/seperator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <TextView
                android:id="@+id/objectivesuggestion3"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_objective_3" />

            <View
                style="@style/seperator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <TextView
                android:id="@+id/objectivesuggestion4"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_objective_4" />

            <View
                style="@style/seperator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <TextView
                android:id="@+id/objectivesuggestion5"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_objective_5" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>