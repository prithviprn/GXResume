<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/form_box_bg"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:padding="0.5dp" >

        <LinearLayout
            style="@style/fieldset_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/block_head_text_view_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/describe_reference" />

            <EditText
                android:id="@+id/et_name"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/referer_name_key" />

            <View
                style="@style/seperator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <EditText
                android:id="@+id/et_job_title"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/referer_job_designation_key" />

            <View
                style="@style/seperator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <EditText
                android:id="@+id/et_address"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/referer_work_address_key" />

            <View
                style="@style/seperator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <EditText
                android:id="@+id/et_email"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/referer_email_key" />

            <View
                style="@style/seperator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <EditText
                android:id="@+id/et_work_phone"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/work_phone_key" />

            <View
                style="@style/seperator_xlarge"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <EditText
                android:id="@+id/et_personal_phone"
                style="@style/edit_text_style_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/personal_phone_key" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reference_container"
            style="@style/fieldset_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>
    </LinearLayout>

</ScrollView>