<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:id="@+id/template8_education_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:clipChildren="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="@dimen/item_image_width_xlarge"
        android:layout_height="@dimen/item_image_hight_xlarge"
        android:layout_marginTop="15dp"
        android:clipChildren="false" >

        <ImageView
            android:id="@+id/image_edu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/white"
            android:src="@drawable/ic_ring" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_edu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <com.grexoft.resume.widgets.TextViewWithFont
                android:id="@+id/txt_degree"
                font:name="oswald"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/degree_key"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold"
                font:spacing="@dimen/spacing_head"
                font:type="bold"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/txt_passout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="@string/passout_year_key"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_xlarge"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.grexoft.resume.widgets.TextViewWithFont
                android:id="@+id/txt_university"
                font:name="oswald"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/university_key"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_xlarge"
                font:spacing="@dimen/spacing_head"
                font:type="bold" />

            <TextView
                android:id="@+id/txt_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/result_key"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_xlarge" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>