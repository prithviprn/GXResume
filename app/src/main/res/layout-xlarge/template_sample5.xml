        </LinearLayout>

        <LinearLayout
            android:id="@+id/projects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical" >

            <TableRow
                android:id="@+id/tr10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_heading_projects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
