                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_heading_personal_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@color/light_grey"
