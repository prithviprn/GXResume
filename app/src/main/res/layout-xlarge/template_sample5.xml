                    android:padding="@dimen/padding_heading_xlarge"
                    android:text="@string/work_exeperence"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold" />
            </TableRow>

            <LinearLayout
