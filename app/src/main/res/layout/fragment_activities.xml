<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/activitesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/form_box_bg"
        android:orientation="vertical"
        android:layout_margin="3dp"
        android:padding="0.5dp" >

        <LinearLayout
            style="@style/fieldset_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/block_head_bg"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <TextView
                    style="@style/block_head_text_view_style_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:text="@string/extracarricular_title" />

                <ImageView
                    android:id="@+id/btn_exCarriculam"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:padding="@dimen/icon_padding_normal"
                    android:src="@drawable/ic_plus_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activities_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/fieldset_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/block_head_bg"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <TextView
                    style="@style/block_head_text_view_style_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:text="@string/hobby_title" />

                <ImageView
                    android:id="@+id/btn_hobbies"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:padding="@dimen/icon_padding_normal"
                    android:src="@drawable/ic_plus_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hobbies_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/fieldset_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/block_head_bg"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <TextView
                    style="@style/block_head_text_view_style_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:text="@string/achievement_title" />

                <ImageView
                    android:id="@+id/btn_achievement"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:padding="@dimen/icon_padding_normal"
                    android:src="@drawable/ic_plus_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/achievement_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/fieldset_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/block_head_bg"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <TextView
                    style="@style/block_head_text_view_style_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:text="@string/strength_title" />

                <ImageView
                    android:id="@+id/btn_strength"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:padding="@dimen/icon_padding_normal"
                    android:src="@drawable/ic_plus_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/strength_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>