<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:weightSum="1.0">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.52"
        android:background="@color/violet_screen" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/logo_white"
                android:layout_width="@dimen/app_logo_width_and_height_in_normal"
                android:layout_height="@dimen/app_logo_width_and_height_in_normal"
                android:src="@drawable/logo_white" />

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/app_name_leftPadding_in_large"
                android:text="@string/application_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/app_name_text_size_in_normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_powerdby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/Powered_by_marginBottom_in_normal"
            android:text="@string/powerd_by"
            android:textColor="@android:color/white"
            android:textSize="@dimen/Powered_by_text_size_in_normal" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.48"
        android:background="@drawable/img_splash1" >

        
    </ImageView>
    

</LinearLayout>
